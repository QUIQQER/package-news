<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>

    <bricks>
        <!-- available standard bricks -->
        <brick control="\QUI\News\Bricks\NewsEntryList">
            <title>
                <locale group="quiqqer/news" var="news.control.list.title" />
            </title>
            <description>
                <locale group="quiqqer/news" var="news.control.list.description" />
            </description>

            <settings>
                <setting name="news.template" type="select">
                    <locale group="quiqqer/news" var="news.template" />
                    <option value="standard">
                        <locale group="quiqqer/news" var="news.standard" />
                    </option>
                    <option value="border">
                        <locale group="quiqqer/news" var="news.border" />
                    </option>
                    <option value="simpleArticleList">
                        <locale group="quiqqer/news" var="news.simpleArticleList" />
                    </option>
                    <option value="advancedArticleList">
                        <locale group="quiqqer/news" var="news.advancedArticleList" />
                    </option>
                </setting>

                <setting name="news.max">
                    <defaoult>5</defaoult>
                    <locale group="quiqqer/news"
                            var="news.max"
                    />
                </setting>

                <setting name="news.showShort" type="checkbox">
                    <locale group="news.showShort"
                            var="news.showShort" />
                </setting>

                <setting name="news.showCreator" type="checkbox">
                    <locale group="quiqqer/news"
                            var="news.showCreator" />
                </setting>

                <setting name="news.showDate" type="checkbox">
                    <locale group="quiqqer/news"
                            var="news.showDate" />
                </setting>

                <setting name="news.showTime" type="checkbox">
                    <locale group="quiqqer/news"
                            var="news.showTime" />
                </setting>

                <setting name="news.showImages" type="checkbox">
                    <locale group="quiqqer/news"
                            var="news.showImages"
                    />
                </setting>

                <!--<input conf="quiqqer.settings.sitetypes.list.showSheets" type="checkbox">
                    <text>
                        <locale group="quiqqer/sitetypes"
                                var="quiqqer.sitetypes.list.settings.showSheets"
                        />
                    </text>
                </input>-->
            </settings>
        </brick>
    </bricks>

</quiqqer>
